<view class="container">
    <view class="search-container">
        <l-button
                width="710"
                height="60"
                icon="research"
                icon-size="24"
                icon-color="#C4C9D2"
                l-class="search-btn"
                bind:lintap="onGoToSearch"
                shape="square">
            搜索商品
        </l-button>
    </view>
    <view class="main">
        <l-segment
                height="{{segHeight}}"
                item-height="90"
                even="{{false}}"
                width="160"
                scrollable
                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                l-line-class="l-seg-line"
                placement="left">
            <block wx:for="{{}}" wx:key="index">
                <l-segment-item key="{{}}" tab="{{}}"></l-segment-item>
            </block>
        </l-segment>
        <view></view>
    </view>
</view>
